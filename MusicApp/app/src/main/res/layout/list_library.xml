<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/CategoryMusicTitle"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Now Playing your Music" />

    <ImageView
        style="@style/CategoryMusicImage"
        android:id="@+id/myMusicLib" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/play_button"
            style="@style/CategoryPlay" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nowPlayingSong"
                tools:text="Something Just Like This"
                style="@style/CategoryMusic" />

            <TextView
                android:id="@+id/nowPlayingArtist"
                tools:text="ColdPlay and The Chainsmokers"
                style="@style/CategoryArtist" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>